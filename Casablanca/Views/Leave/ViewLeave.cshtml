@using Casablanca.Models;

@model Casablanca.Models.Leaves.Leave

@{
	ViewBag.Title = "Voir une demande de congé";
}

<div>
	<h2>Demande de congé de @Model.Collaborator.FirstName @Model.Collaborator.LastName </h2>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			Description
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Description)
		</dd>

		<dt>
			Statut
		</dt>

		<dd>
			@HelperModel.ToString(Model.Status, Model.Treatment)
		</dd>

		<dt>
			Type
		</dt>

		<dd>
			@HelperModel.ToString(@Model.Type)
		</dd>

		<dt>
			Date de début
		</dt>

		<dd>
			@Model.StartDate.ToString("dd/MM/yyyy")
			@Model.StartMorningOrAfternoon
		</dd>

		<dt>
			Date de fin
		</dt>

		<dd>
			@Model.EndDate.ToString("dd/MM/yyyy")
			@Model.EndMorningOrAfternoon
		</dd>

		<dt>
			Nombre de Journées
		</dt>

		<dd>
			@(Model.ComputeLengthLeave() * 0.5)
		</dd>

	</dl>
</div>
